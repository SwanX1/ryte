<header>
  {{#if session_user}}
    {{#unless session_user.email_verified}}
      <div id="email-verification-notice" class="notification-bar">
        Your email is not verified.
        <button id="resend-verification-btn" class="btn btn-sm">Resend verification email</button>
        <a href="/auth/verify-email" class="btn btn-sm">Verify Email</a>
        <span id="verification-resent-msg" style="display:none; margin-left:10px;">Email verification resent!</span>
      </div>
    {{/unless}}
  {{/if}}
  <nav>
    <div class="nav-left">
      <div class="logo">
        <a href="/">
          <img src="/assets/ryte-logo.png" alt="Ryte logo">
        </a>
      </div>
      <div class="nav-ryte">
        <h1>RYTE</h1>
        <p><i>write right</i></p>
      </div>
      <div>
        <a href="/post/create" class="btn btn-create">Create New Post</a>
      </div>
    </div>
    <div class="segmented-control">
        <button class="segment segment-feed">Feed</button>
        <button class="segment segment-followers">Recent</button>
    </div>
    <div class="nav-right">
      <form action="/search" method="get" class="search-form">
        <input type="text" name="q" placeholder="Search..." required>
      </form>
      {{#if session_user}}
        <div class="user-profile">
          <a class="profile-btn" href="/@{{session_user.username}}">
            <img src="{{session_user.avatar_url}}" alt="{{session_user.username}}'s avatar" class="avatar">
            <span class="username">{{session_user.username}}</span>
          </a>
        </div>
        <a href="/auth/logout" class="btn-logout">
          <img src="/assets/log-out.png">
        </a>
      {{else}}
        <a href="/auth/login" class="btn btn-login">Login</a>
        <a href="/auth/signup" class="btn btn-signup">Sign Up</a>
      {{/if}}
    </div>
  </nav>
</header> 